#!/bin/sh
### BEGIN INIT INFO
# Provides:          iofog
# Required-Start:    $local_fs $remote_fs $network $syslog
# Required-Stop:     $local_fs $remote_fs $network $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# X-Interactive:     true
# Short-Description: Start/stop iofog server
### END INIT INFO

SERVICE_NAME=iofogd
PATH_TO_JAR=/usr/bin
JAR_FILE_NAME=$PATH_TO_JAR/$SERVICE_NAME.jar

if [ "$(id -u)" != '0' ]; then
	log_failure_msg "$SERVICE_NAME must be run as root"
	exit 1
fi
case $1 in
    start)
	mv /dev/random /dev/random.real
	ln -s /dev/urandom /dev/random

	echo "Starting iofog service..."
        cd $PATH_TO_JAR
        java -jar $JAR_FILE_NAME start &
    ;;
    stop)
        cd $PATH_TO_JAR
        java -jar $JAR_FILE_NAME stop
    ;;
 #   restart)
 #echo "Restarting iofog service..."
 #   cd $PATH_TO_JAR
 #  sudo java -jar $JAR_FILE_NAME stop R
 # sudo java -jar $JAR_FILE_NAME start &
 #  ;;
esac


